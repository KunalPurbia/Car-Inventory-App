doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='icon', type='image/x-icon', href='/images/favicon.ico')
    link(rel='stylesheet', href='/stylesheets/registerForm.css')
    link(rel='stylesheet', href='/stylesheets/catalogue.css')
    title HOME
  body
    #navbar
      img#brandLogo(src='/images/brand_logo.webp', alt='Brand Logo')
      center
        p#brandName WELCOME, #{userEmail}
      span#buttons
        button
          if user === "buyer"
            a.displayButton(href='/buyer/') HOME
          else
            a.displayButton(href='/seller/') HOME
        button
            if user === "buyer"
                a.displayButton(href='/buyer/catalogue') CATALOGUE
            else
                a.displayButton(href='/seller/catalogue') CATALOGUE
        button
          a.displayButton(href='/') LOGOUT
    #homeView
      each value in catalogueData
        #container
          img(src=value.companyLogo, alt='Company Logo')
          h2 #{value.carCompany}
          p
            b ABOUT: 
            span #{value.companyAbout}
          input(type='button', value='SEE CARS')
      if user === "seller"
        #addCatalogue
          a.displayButton(href='/seller/catalogue/add') ADD CATALOGUE